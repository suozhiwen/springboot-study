<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.mapper.SysUserMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, age, email
    </sql>

    <select id="selectSysUser" parameterType="com.java.entity.SysUser" resultType="com.java.entity.SysUser">
        select
        <include refid="Base_Column_List"></include>
        from  sys_user
        <where>
            <if test="id !=null ">
               and id = #{id}
            </if>
            <if test="name !=null  and name != ''">
               and name = #{name}
            </if>
            <if test="age !=null ">
               and age = #{age}
            </if>
            <if test="email !=null  and email != ''">
               and email = #{email}
            </if>
        </where>
    </select>

    <select id="count" resultType="java.lang.Integer">
        select count(1) from  sys_user
        <where>
            <if test="id !=null ">
               and id = #{id}
            </if>
        </where>
    </select>

    <select id="selectSysUserList" parameterType="com.java.entity.SysUser"
            resultType="com.java.entity.SysUser">
        select
        <include refid="Base_Column_List"></include>
        from  sys_user
        <where>
            <if test="id !=null ">
               and id = #{id}
            </if>
            <if test="name !=null">
               and name = #{name}
            </if>
            <if test="age !=null">
               and age = #{age}
            </if>
            <if test="email !=null">
               and email = #{email}
            </if>
        </where>
    </select>

    <insert id="insertSysUser">
        insert into sys_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id !=null ">
                id,
            </if>
            <if test="name !=null ">
                name,
            </if>
            <if test="age !=null ">
                age,
            </if>
            <if test="email !=null ">
                email,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">

        <if test="id !=null ">
           #{id},
        </if>
            <if test="name !=null">
                 #{name},
            </if>
            <if test="age !=null">
                 #{age},
            </if>
            <if test="email !=null">
                 #{email},
            </if>
        </trim>
    </insert>

    <update id="updateSysUser" parameterType="com.java.entity.SysUser">
        update  sys_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="id !=null ">
                id = #{id},
            </if>
            <if test="name !=null ">
                name = #{name},
            </if>
            <if test="age !=null ">
                age = #{age},
            </if>
            <if test="email !=null ">
                email = #{email},
            </if>
        </trim>
        <where>
            <if test="id !=null ">
                id = #{id}
            </if>
        </where>
    </update>

    <delete id="deleteSysUserById" parameterType="Integer">
        delete from  sys_user
        <where>
            <if test="id !=null ">
                id = #{id}
            </if>
        </where>
    </delete>

    <delete id="deleteSysUserByIds" parameterType="integer">
        delete from  sys_user
        where
         id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
                            </delete>




</mapper>
